@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div id="loginRegisterBorders"class="row justify-content-center border mx-auto shadow mb-3" style="max-width: 500px; backdrop-filter: blur(5px);
    background-color: rgba(255, 255, 255, 0.2);
    ">
    <h1 class="text-center pt-2">@ViewData["Title"]</h1>
            <form class="pt-4" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="row mb-3">
                    <div class="col d-flex justify-content-center">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe"> Remember me </label>
                        </div>
                    </div>
                    <div class="col">
                         <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
                </div>
                <button id="login-submit" type="submit" class="btn btn-block mb-2 btn-primary">Log in</button>
                
                <div class="text-center">
                        <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>
                    
                </div>
            </form>
   </div>
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
