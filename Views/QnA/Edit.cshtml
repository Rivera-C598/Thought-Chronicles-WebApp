@model ThoughtChroniclesWebApp.Models.QnA

@{
    ViewData["Title"] = "Edit";
}

<div class="card mx-auto shadow mb-3 rounded" style="max-width: 550px">
  <div class="card-header" style="float: left">
    <a asp-action="Index"><i class="fa-solid fa-circle-arrow-left fa-2x"></i></a>
  </div>
    <div class="card-body">
     <h1 class="text-center">Edit</h1>

     <div class="alert alert-info alert-dismissible fade show" role="alert">
         <h4 class="alert-heading">Hello</h4>
         <hr />
         Don't forget to select a type of question!
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
        </button>
    </div>

     <div style="width: 100%">
        <form asp-action="Edit">
          
            <div class="row"> 
            <div class="form-group col">
                <label asp-for="TypeOfQuestion" class="control-label">Type of Question</label>
                <select class="form-control" id="TypeOfQuestion" name="TypeOfQuestion">
                <option disabled selected>Please select a type of question...</option>
                <option>Random</option> 
                <option>Meme</option> 
                <option>Game</option> 
                <option>Riddle</option>
                <option>Joke</option>
                <option>Pickup-Line</option>
                <option>Math</option>
                <option>Science</option>
                </select>
                <span asp-validation-for="TypeOfQuestion" class="text-danger"></span>
            </div>

            <div class="form-group col">
                <label asp-for="Author" class="control-label">Contributed by:</label>
                <input asp-for="Author" class="form-control-plaintext" readonly/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
          </div> 

            <div class="form-group">
                <label asp-for="Questions" class="control-label"></label>
                <textarea asp-for="Questions" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Questions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Answers" class="control-label">Answer</label>
                <textarea asp-for="Answers" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Answers" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-success btn-block" /> 
            </div>
        </form>
      </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
